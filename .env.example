# Environment Configuration for Magento 2.4.8-p3
# Copy this file to .env and update with your values

# Application
APP_ENV=dev
COMPOSE_PROJECT_NAME=mgthemes

# MySQL Database
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=magento
MYSQL_USER=magento
MYSQL_PASSWORD=magento

# OpenSearch
OPENSEARCH_PASSWORD=Admin@123456

# Xdebug (Development only)
XDEBUG_MODE=debug
XDEBUG_PORT=9003

# Magento Settings
MAGENTO_BASE_URL=http://mgthemes.local/
MAGENTO_BACKEND_FRONTNAME=admin
MAGENTO_ADMIN_FIRSTNAME=Admin
MAGENTO_ADMIN_LASTNAME=User
MAGENTO_ADMIN_EMAIL=admin@mgthemes.info
MAGENTO_ADMIN_USER=admin
MAGENTO_ADMIN_PASSWORD=Admin@123456

# Magento Database Settings
MAGENTO_DB_HOST=mgthemes_mysql
MAGENTO_DB_NAME=magento
MAGENTO_DB_USER=magento
MAGENTO_DB_PASSWORD=magento_secure_password_change_me

# Redis
MAGENTO_CACHE_REDIS_SERVER=mgthemes_redis
MAGENTO_CACHE_REDIS_DB=0
MAGENTO_PAGE_CACHE_REDIS_SERVER=mgthemes_redis
MAGENTO_PAGE_CACHE_REDIS_DB=1
MAGENTO_SESSION_REDIS_SERVER=mgthemes_redis
MAGENTO_SESSION_REDIS_DB=2

# OpenSearch/Elasticsearch
MAGENTO_SEARCH_ENGINE=opensearch
MAGENTO_OPENSEARCH_HOST=mgthemes_opensearch
MAGENTO_OPENSEARCH_PORT=9200
MAGENTO_OPENSEARCH_INDEX_PREFIX=magento2
MAGENTO_OPENSEARCH_ENABLE_AUTH=0
MAGENTO_OPENSEARCH_USERNAME=
MAGENTO_OPENSEARCH_PASSWORD=

# Composer (Magento Marketplace Keys)
COMPOSER_AUTH_USERNAME=your_public_key_here
COMPOSER_AUTH_PASSWORD=your_private_key_here
